@model List<BannerHome>


<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <a href="/admin/HomeBanner/create">Create</a>
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#Id</th>
                            <th>Photo</th>
                            <th>Title</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>#Id</th>
                            <th>Photo</th>
                            <th>Title</th>
                            <th>Options</th>

                        </tr>
                    </tfoot>
                    <tbody>
                        @* *@
                        @foreach (var home in Model)
                        {
                            <tr>

                                <th>@home.Id</th>
                                <th>
                                    <img src="@home.PhotoUrl" alt="" width="100" srcset="">
                                </th>
                                <th>
                                    @Html.Raw(home.Title)
                                </th>
                                <th>
                                    <a href="/admin/HomeBanner/Detail/@home.Id" class="btn btn-danger"> Deteil </a>
                                    <a href="/admin/HomeBanner/delete/@home.Id" class="btn btn-secondary"> Delete </a>
                                    <a href="/admin/HomeBanner/update/@home.Id" class="btn btn-info">Update</a>
                                </th>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>